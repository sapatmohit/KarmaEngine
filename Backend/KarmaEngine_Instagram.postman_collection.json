{
  "info": {
    "name": "Karma Engine - Instagram Integration",
    "description": "API endpoints for Instagram scraping and sentiment analysis",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Instagram",
      "item": [
        {
          "name": "1. Set Instagram Username",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"instagramUsername\": \"{{instagram_username}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/instagram/{{wallet_address}}/username",
              "host": ["{{base_url}}"],
              "path": ["instagram", "{{wallet_address}}", "username"]
            }
          },
          "response": []
        },
        {
          "name": "2. Scrape Instagram Content",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/instagram/{{wallet_address}}/scrape?forceRescrape=false",
              "host": ["{{base_url}}"],
              "path": ["instagram", "{{wallet_address}}", "scrape"],
              "query": [
                {
                  "key": "forceRescrape",
                  "value": "false",
                  "description": "Force rescrape even if cached"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "3. Get Stored Content",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/instagram/{{wallet_address}}/content?limit=50",
              "host": ["{{base_url}}"],
              "path": ["instagram", "{{wallet_address}}", "content"],
              "query": [
                {
                  "key": "contentType",
                  "value": "post",
                  "disabled": true,
                  "description": "Filter by 'post' or 'reel'"
                },
                {
                  "key": "analyzed",
                  "value": "false",
                  "disabled": true,
                  "description": "Filter by analysis status"
                },
                {
                  "key": "limit",
                  "value": "50",
                  "description": "Number of items"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "4. Analyze Sentiment (All)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"analyzeAll\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/instagram/{{wallet_address}}/analyze",
              "host": ["{{base_url}}"],
              "path": ["instagram", "{{wallet_address}}", "analyze"]
            }
          },
          "response": []
        },
        {
          "name": "4b. Analyze Sentiment (Specific)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"contentIds\": [\"content_id_1\", \"content_id_2\"]\n}"
            },
            "url": {
              "raw": "{{base_url}}/instagram/{{wallet_address}}/analyze",
              "host": ["{{base_url}}"],
              "path": ["instagram", "{{wallet_address}}", "analyze"]
            }
          },
          "response": []
        },
        {
          "name": "5. Complete Process (Recommended)",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/instagram/{{wallet_address}}/process",
              "host": ["{{base_url}}"],
              "path": ["instagram", "{{wallet_address}}", "process"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Prerequisites",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"walletAddress\": \"{{wallet_address}}\",\n  \"name\": \"Test User\",\n  \"dateOfBirth\": \"1990-01-01\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/users/register",
              "host": ["{{base_url}}"],
              "path": ["users", "register"]
            }
          },
          "response": []
        },
        {
          "name": "Get User",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/users/{{wallet_address}}",
              "host": ["{{base_url}}"],
              "path": ["users", "{{wallet_address}}"]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "wallet_address",
      "value": "0xTEST123",
      "type": "string"
    },
    {
      "key": "instagram_username",
      "value": "natgeo",
      "type": "string"
    }
  ]
}
